
<% include partials/_header %>
    <div class="container">
        <div class="row">
            <!--FORM-->
            <div class="col-md-5">
                <div class="card">
                    <div class="card-body">
                        <form action="/add" method="POST">
                            <h1>¡Crear una nueva pizza!</h1>
                            <div class="form-group">
                                <input type="text" name="nombre" placeholder="Ingresar nombre de la nueva pizza" class="form-control">
                            </div>
                            <div class="form-group">
                                <textarea name="descripcion" cols="80" class="form-control" placeholder="Insertar una descripcion"></textarea>
                            </div>
                            <div class="form-group">
                                INGREDIENTES:
                                <br />
                                <input type="checkbox" name="Tomate"> Tomate
                                <input type="checkbox" name="Cebolla"> Cebolla
                                <input type="checkbox" name="Aceituna"> Aceituna negra
                                <input type="checkbox" name="Champiñones"> Champiñones
                                <input type="checkbox" name="Jamon"> Jamón
                                <input type="checkbox" name="Peperoni"> Peperoni
                                <input type="checkbox" name="Chile"> Chile Pimiento
                                <input type="checkbox" name="Piña"> Piña
                            </div>
                            <div class="form-group">
                                TIPO DE MASA:
                                <br />
                                <input type="radio" name="masa">Gruesa
                                <br />
                                <input type="radio" name="masa">Delgada
                            </div>
                            <div class="form-group">
                                PORCIONES:
                                <input type="number" min="6" max="12" step="2">
                            </div>
                            <button type="submit" class="btn btn-primary">
                                Add
                            </button>
                        </form>
                    </div>
                </div>
            </div>
            <!--LIST-->
            <div class="col-md-7">
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>No.</th>
                            <th>Tittle</th>
                            <th>Description</th>
                            <th>Operation</th>
                        </tr>
                    </thead>
                    <tbody>
                        
                    </tbody>
                </table>
            </div>
        </div>
    </div>
<% include partials/_footer %>